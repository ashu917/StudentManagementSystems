<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #e9ecef; min-height: 100vh; }
    .dashboard-header {
      background: linear-gradient(to right, #004085, #0056b3);
      color: white;
      padding: 2rem;
      border-radius: .5rem;
      text-align: center;
      margin-bottom: 40px;
    }
    .card-hover {
      transition: transform .2s, box-shadow .2s;
    }
    .card-hover:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    }
    .card-full {
      height: 100%;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="dashboard-header">
      <h2>üë®‚Äçüíº Admin Dashboard</h2>
      <p class="lead">Welcome, <%= admin.name %>!</p>
    </div>

    <div class="row gy-4">
      <% 
        // Define your cards as an array (use var, not const, to avoid EJS parsing issues)
        var cards = [
          { title: "‚ûï Add Student", href: "/admin/add-student", bg: "bg-primary-subtle", btn: "btn-outline-primary" },
          { title: "üìã View All Students", href: "/admin/students", bg: "bg-success-subtle", btn: "btn-outline-success" },
          { title: "üîç Search / Sort", href: "/admin/search", bg: "bg-warning-subtle", btn: "btn-outline-warning" },
          { title: "‚ûï Add Performance", href: "/admin/add-student-performance", bg: "bg-info-subtle", btn: "btn-outline-info" },
          { title: "üìà View Performance", href: "/admin/view-performance", bg: "bg-secondary-subtle", btn: "btn-outline-secondary" },
          { title: "üö™ Logout", href: "/logout", bg: "bg-danger-subtle", btn: "btn-outline-danger" }
        ];
      %>

      <% cards.forEach(function(card) { %>
        <div class="col-sm-6 col-md-4">
          <div class="card card-full card-hover <%= card.bg %> border-0 h-100">
            <div class="card-body d-flex flex-column justify-content-between text-center py-4">
              <h5 class="card-title"><%= card.title %></h5>
              <a href="<%= card.href %>" class="btn <%= card.btn %> mt-3">Go</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
