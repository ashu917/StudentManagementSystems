<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Student Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body {
      background: linear-gradient(to right, #e0eafc, #cfdef3);
      min-height: 100vh;
    }
    .form-label {
      font-weight: 600;
    }
    .card-header {
      background: #0d6efd;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-9">
        <div class="card shadow-lg border-0">
          <div class="card-header text-white text-center">
            <h4>ðŸ“˜ Add Student Profile Details</h4>
          </div>
          <div class="card-body">
            <form action="/add-student-performance" method="POST" class="row g-3">

              <!-- Student ID -->
              <div class="col-md-6">
                <label class="form-label">Student ID</label>
                <input type="number" name="student_id" class="form-control" placeholder="Enter Student ID" required>
              </div>

              <!-- Attendance -->
              <div class="col-md-6">
                <label class="form-label">Attendance (%)</label>
                <input type="number" step="0.01" name="attendance" class="form-control" placeholder="e.g., 92.50" required>
              </div>

              <!-- Assignments Done -->
              <div class="col-md-6">
                <label class="form-label">Assignments Completed</label>
                <input type="number" name="assignments_done" class="form-control" placeholder="Number of assignments" required>
              </div>

              <!-- Projects -->
              <div class="col-md-6">
                <label class="form-label">Projects</label>
                <input type="text" name="projects" class="form-control" placeholder="Project titles or summary">
              </div>

              <!-- Participation -->
              <div class="col-12">
                <label class="form-label">Participation</label>
                <textarea name="participation" class="form-control" rows="2" placeholder="e.g., Actively participates in group activities, presentations, etc."></textarea>
              </div>

              <!-- Behavior Rating -->
              <div class="col-md-6">
                <label class="form-label">Behavior Rating</label>
                <select name="behavior_rating" class="form-select" required>
                  <option selected disabled>Select Rating</option>
                  <option>Excellent</option>
                  <option>Good</option>
                  <option>Average</option>
                  <option>Poor</option>
                </select>
              </div>

              <!-- Teacher Remarks -->
              <div class="col-12">
                <label class="form-label">Teacher's Remarks</label>
                <textarea name="teacher_remarks" class="form-control" rows="3" placeholder="Any observations or comments by the teacher"></textarea>
              </div>

              <!-- Buttons -->
              <div class="col-12 text-center mt-4">
                <button type="submit" class="btn btn-success px-4">ðŸ’¾ Save Profile</button>
                <a href="/admin/dashboard" class="btn btn-outline-secondary ms-2">ðŸ”™ Back</a>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
